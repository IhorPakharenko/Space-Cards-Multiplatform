root = true

[*.{kt,kts}]
max_line_length = 100
indent_size = 2
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true
ktlint_function_naming_ignore_when_annotated_with = Composable, Test
ktlint_standard_multiline-expression-wrapping = disabled
ktlint_standard_string-template-indent = disabled
ktlint_standard_trailing-comma-on-call-site = enabled
ktlint_argument_list_wrapping_ignore_when_parameter_count_greater_or_equal_than = 3
ktlint_function_signature_body_expression_wrapping = default
# ktlint_standard_class-signature = disabled
compose_allowed_composition_locals = LocalWindowSizeClass
ktlint_class_signature_rule_force_multiline_when_parameter_count_greater_or_equal_than = 3

[*.kts]
ktlint_standard_chain-method-continuation = disabled

[build-logic/**.kt]
ktlint_standard_chain-method-continuation = disabled

